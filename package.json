{
  "name": "kandy",
  "displayName": "Kandy - Kubernetes Cluster Manager",
  "description": "An AI-powered VS Code extension for Kubernetes cluster management that makes DevOps workflows conversational and intelligent",
  "version": "0.1.0",
  "publisher": "alto9",
  "engines": {
    "vscode": "^1.80.0",
    "node": ">=22.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "kandyView",
          "title": "Kandy",
          "icon": "$(kubernetes)"
        }
      ]
    },
    "views": {
      "kandyView": [
        {
          "id": "kandyClusterView",
          "name": "Clusters"
        }
      ]
    },
    "commands": [
      {
        "command": "kandy.refreshClusters",
        "title": "Refresh Clusters",
        "category": "Kandy",
        "icon": "$(refresh)"
      },
      {
        "command": "kandy.configureApiKey",
        "title": "Configure API Key",
        "category": "Kandy",
        "icon": "$(key)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "kandy.refreshClusters",
          "when": "view == kandyClusterView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Kandy",
      "properties": {
        "kandy.apiKey": {
          "type": "string",
          "default": "",
          "description": "Optional API key for AI-powered features. Get your key at portal.kandy.dev",
          "scope": "application"
        },
        "kandy.serverUrl": {
          "type": "string",
          "default": "https://api.kandy.dev",
          "description": "Kandy server URL",
          "scope": "application"
        },
        "kandy.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha --require source-map-support/register --ui tdd out/test/suite/**/*.test.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.45.0",
    "mocha": "^10.2.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.4",
    "typescript": "^5.1.6",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.20.0",
    "js-yaml": "^4.1.0"
  }
}
